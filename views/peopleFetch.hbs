<div class="f">
    <h1>Search a person</h1>
    <form action="/peopleFetch" method="POST">
    <label for="person">Person name: </label>
    <input type="text" name="person">
    <br>

    <input type="submit" name="Send">
    </form>

    {{#if err}}
        <h3>{{err}}</h3>
    {{else}}
        <ul>
            {{#each data}}
                <li>{{@key}} : {{this}}</li>
            {{/each}} {{!-- ### removed redundant {{each}} ### --}}
        </ul>
        <img src="{{moviePoster}}" alt="">
    {{/if}}
</div>


